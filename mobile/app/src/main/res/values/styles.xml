<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_text_black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_text_gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="style_text_title" parent="style_text_black">
        <item name="android:textSize">32sp</item>

    </style>

    <style name="style_text_subtitle" parent="style_text_black">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_text_small" parent="style_text_black">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="style_text_small_gray" parent="style_text_gray">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_card_view_ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>


